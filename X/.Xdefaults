! xdefaults
! Current theme:
! blak-en-whyt

!! appearance
urxvt.scrollBar:            False
urxvt.lineSpace:            5
urxvt.letterSpace:          -1

!! fonts
urxvt.font:                 xft:Pragmata Pro Mono:pixelsize=17:minspace=False
urxvt.boldFont:             xft:Pragmata Pro Mono:pixelsize=17:Bold:minspace=False
urxvt.italicFont:           xft:Pragmata Pro Mono:pixelsize=17:Italic:minspace=False
urxvt.boldItalicFont:       xft:Pragmata Pro Mono:pixelsize=17:Bold:Italic:minspace=False

!! increase history size
urxvt.saveLines:            1000000

!! perl extensions
urxvt.perl-ext-common:      default,matcher,font-size

!! open urls in browser with ctrl-click
urxvt.urlLauncher:          /usr/bin/firefox
urxvt.matcher.button:       C1

!! change font size on ctrl-plus/minus
urxvt.keysym.Control-0x2b:  perl:font-size:increase
urxvt.keysym.Control-0x2d:  perl:font-size:decrease
