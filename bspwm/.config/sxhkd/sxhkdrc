### window & workspace cycling keybindings

# switch to workspace, use shift to send focused window to workspace 
alt + {_,shift} + {1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# cycle between last used windows/workspaces
alt + {grave,Tab}
    bspc {node,desktop} -f last

# cycle between all available workspaces
alt + {a,d}
    bspc desktop -f {prev,next}

# change focus to window in specified direction - if tiled move window in given direction
alt + {Left,Down,Up,Right,h,j,k,l}
    ~/.config/scripts/bspwm-focus.sh {west,south,north,east,west,south,north,east}

# switch with window in specified direction
alt + shift + {Left,Down,Up,Right,h,j,k,l}
    bspc node -s {west,south,north,east,west,south,north,east}

# cycle between all windows in a workspace, use shift to reverse order
alt + {_,shift} + c
    bspc node -f {next,prev}.local

# cycle between windows across workspaces in order of history
alt + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on


### killing windows

# close focused window, use shift to kill
alt + {_,shift} + q
    bspc node -{c,k}; bspc node -f last   


### window size and layout manipulation

# change mode of the focused window
alt + {t,g,f}
    ~/.config/scripts/bspwm-mode.sh {pseudo_tiled,floating,fullscreen}

# cycle through layouts on the active workspace
alt + m
    bspc desktop -l next

# focus on the biggest window in the active workspace
alt + b
    bspc node -f biggest.local

# swap the focused window with the biggest window in the active workspace
alt + shift + b
    bspc node -s biggest.local

# rotate window layout of the active workspace
alt + r
    bspc node @/ -R 90

# resize the active window to the given direction
super + {Left,Down,Up,Right,h,j,k,l}
    ~/.config/scripts/bspwm-resize.sh {west,south,north,east,west,south,north,east} 20

# toggle between bars
alt + p
    ~/.config/scripts/polybar-helper.sh switch

# toggle between global visible state of bar
alt + shift + p
    ~/.config/scripts/polybar-helper.sh pad_toggle && ~/.config/scripts/polybar-helper.sh toggle


### keybindings for different dmenu scripts

# app menu
super + a
    ~/.config/scripts/dmenu/apps.sh launch

# app menu - refresh entries
super + shift + a
    ~/.config/scripts/dmenu/apps.sh refresh

# power menu
super + p
    ~/.config/scripts/dmenu/power.sh

# window menu
super + Tab
    ~/.config/scripts/dmenu/window.sh

# workspace menu
super + grave
    ~/.config/scripts/dmenu/workspace.sh

# calculator menu
super + c
    ~/.config/scripts/dmenu/calc.sh

# kill menu
super + q
    ~/.config/scripts/dmenu/kill.sh

# clipboard menu
super + b
    ~/.config/scripts/dmenu/clipboard.sh

# clipboard delete menu
super + shift + b
    ~/.config/scripts/dmenu/clipdelete.sh

# online search menu
super + o
    ~/.config/scripts/dmenu/surfraw.sh

# video menu
super + y
    ~/.config/scripts/dmenu/video.sh

# music menu
super + shift + m
    ~/.config/scripts/dmenu/mpd.sh


### keybindings for most used applications

# launch terminal
super + t
    st -t "Terminal"

# launch web browser
super + w
    qutebrowser

# launch web browser (incognito mode)
super + shift + w
    qutebrowser --temp-basedir -s content.private_browsing true

# launch file explorer
super + e
    thunar


### keybindings for most used terminal applications

# launch code editor (vim)
super + v
    st -t "Neovim" -e nvim

# launch music player
super + m
    st -t "Music" -e ~/.config/scripts/ncmpcpp-ueberzug.sh

# launch podcast manager
super + d
    st -t "Podcasts" -e castero

# launch process manager
super + s
    st -t "System Monitor" -e gotop

# launch feed reader
super + n
    st -t "News" -e newsboat


### keyboard function keys/special keys keybindings

# decrease volume
XF86AudioLowerVolume
    amixer -q sset Master 5%-

# increase volume
XF86AudioRaiseVolume
    amixer -q sset Master 5%+

# toggle mute
XF86AudioMute
    amixer -q sset Master toggle

# play/pause mpd
XF86AudioPlay
    mpc toggle

# stop mpd
XF86AudioStop
    mpc stop

# skip to the next track in mpd
XF86AudioNext
    mpc next

# go back to the previous track in mpd
XF86AudioPrev
    mpc prev

# increase brightness of the display
XF86MonBrightnessUp
    xbacklight -inc 10

# decrease brightness of the display
XF86MonBrightnessDown
    xbacklight -dec 10

### keybindings for taking screenshots

# take a screenshot of the current workspace
Print
    scrot '%d-%m-%Y_%H:%M:%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshots'

# take a screenshot of the focused window
alt + Print
    scrot --focused '%d-%m-%Y_%H:%M:%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshots'


### misc keybindings

# reload simple x hotkey daemon
alt + shift + Escape
    pkill -USR1 -x sxhkd

# reload bspwm
alt + Escape
    bspc wm --restart

# show help dialog for keybindings if needed
alt + slash
    ~/.config/scripts/dmenu/bspwm-keybindings.sh
