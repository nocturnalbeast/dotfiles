### window & workspace cycling keybindings

# switch to workspace, use shift to send focused window to workspace 
alt + {_,shift} + {1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# cycle between last used windows across workspaces
alt + {_,shift} + Tab
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# cycle between all available workspaces
alt + {_,shift} + grave
    bspc desktop -f {next,prev}

# change focus to window in specified direction - if floating move window in given direction
alt + {Left,Down,Up,Right,h,j,k,l}
    ~/.config/scripts/bspwm-focus {west,south,north,east,west,south,north,east}

# switch with window in specified direction
alt + shift + {Left,Down,Up,Right,h,j,k,l}
    bspc node -s {west,south,north,east,west,south,north,east}

# cycle between all windows in a workspace, use shift to reverse order
alt + {_,shift} + c
    bspc node -f {next,prev}.local


### closing/killing windows

# close focused window, use shift to kill
alt + {_,shift} + q
    bspc node -{c,k}; bspc node -f last   


### window size and layout manipulation

# change mode of the focused window
alt + {s,d,f}
    ~/.config/scripts/bspwm-mode {pseudo_tiled,floating,fullscreen}

# cycle through layouts on the active workspace
alt + m
    bspc desktop -l next

# focus on / swap with the biggest window in the active workspace
alt + {_,shift} + b
    bspc node -{f,s} biggest.local

# rotate window layout of the active workspace, shift to reverse direction
alt + {_,shift} + r
    bspc node @/ -R {+,-}90

# resize the active window to the given direction
super + {Left,Down,Up,Right,h,j,k,l}
    ~/.config/scripts/bspwm-resize {west,south,north,east,west,south,north,east} 20

# toggle between bars
alt + t
    ~/.config/scripts/polybar-helper switch

# toggle between global visible state of bar
alt + shift + t
    ~/.config/scripts/polybar-helper toggle_all


### keybindings for different dmenu scripts

# app menu
super + a
    ~/.config/scripts/dmenu/apps launch

# app menu - refresh entries
super + shift + a
    ~/.config/scripts/dmenu/apps refresh

# power menu
super + p
    ~/.config/scripts/dmenu/power

# window menu
super + Tab
    ~/.config/scripts/dmenu/window

# workspace menu
super + grave
    ~/.config/scripts/dmenu/workspace

# calculator menu
super + c
    ~/.config/scripts/dmenu/calc

# kill menu
super + q
    ~/.config/scripts/dmenu/kill

# clipboard menu
super + b
    ~/.config/scripts/dmenu/clipboard

# clipboard delete menu
super + shift + b
    ~/.config/scripts/dmenu/clipdelete

# web search menu
super + o
    ~/.config/scripts/dmenu/surfraw

# video menu
super + i
    ~/.config/scripts/dmenu/video

# music menu
super + shift + m
    ~/.config/scripts/dmenu/mpd


### keybindings for most used applications

# launch terminal
super + t
    st -t "Terminal"

# launch web browser
super + w
    qutebrowser

# launch web browser (incognito mode)
super + shift + w
    qutebrowser --temp-basedir -s content.private_browsing true

# launch file explorer
super + e
    thunar


### keybindings for most used terminal applications

# launch code editor (vim)
super + v
    st -t "Neovim" -e nvim

# launch music player
super + m
    st -t "Music" -e ~/.config/scripts/ncmpcpp-ueberzug

# launch podcast manager
super + u
    st -t "Podcasts" -e castero

# launch process manager
super + s
    st -t "System Monitor" -e gotop

# launch feed reader
super + n
    st -t "News" -e newsboat


### keyboard function keys/special keys keybindings

# decrease volume
XF86AudioLowerVolume
    ~/.config/scripts/change-volume down

# increase volume
XF86AudioRaiseVolume
    ~/.config/scripts/change-volume up

# toggle mute
XF86AudioMute
    ~/.config/scripts/change-volume mute

# play/pause mpd
XF86AudioPlay
    mpc toggle

# stop mpd
XF86AudioStop
    mpc stop

# skip to the next track in mpd
XF86AudioNext
    mpc next

# go back to the previous track in mpd
XF86AudioPrev
    mpc prev

# increase brightness of the display
XF86MonBrightnessUp
    ~/.config/scripts/change-brightness increase

# decrease brightness of the display
XF86MonBrightnessDown
    ~/.config/scripts/change-brightness decrease

### keybindings for taking screenshots

# take a screenshot of the current workspace
Print
    ~/.config/scripts/screenshot full

# take a screenshot of the focused window
alt + Print
    ~/.config/scripts/screenshot window

# take a screenshot of any selected window or region
alt + shift + Print
    ~/.config/scripts/screenshot select

### notification control
alt + n
    dunstctl close

alt + shift + n
    dunstctl action

### misc keybindings

# reload simple x hotkey daemon
alt + Escape
    pkill -USR1 -x sxhkd

# reload bspwm
alt + shift + Escape
    bspc wm --restart

# show help dialog for keybindings if needed
alt + slash
    ~/.config/scripts/dmenu/bspwm-keybindings
