# ncmpcpp config

# visualizer options
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_output_name = "my_fifo"
visualizer_sync_interval = "30" 
visualizer_in_stereo = "no"
visualizer_type = "spectrum" (spectrum/wave)
visualizer_look = "▋▋"
visualizer_color = "blue"

# highlight color for items
current_item_prefix = "$(white)$r"
current_item_suffix = "$/r$(end)"

# progressbar options
progressbar_look = "─⊙ "
progressbar_color = "white"
progressbar_elapsed_color = "blue"

# playlist song list formatting
song_list_format = "$1• $8%t $1by $5%a$5 $R$1%l"
now_playing_prefix = "$b$5> "
now_playing_suffix = "$8$/b"

# now playing song line formatting
song_status_format = " $5%t $1by $8%a $1from $5%b "

# playlist song list formatting, for columns mode
song_columns_list_format = "(5)[]{}(22)[white]{a}  (20)[blue]{t|f}  (49)[white]{b}  (4)[black]{l}"

# colors, ihdk
color1 = "white"
color2 = "black"

# other options
mouse_support = "yes"
header_visibility = "no"
statusbar_visibility = "yes"
playlist_display_mode = "columns" (classic/columns)
autocenter_mode = "yes"
titles_visibility = "no"
enable_window_title = "no"
