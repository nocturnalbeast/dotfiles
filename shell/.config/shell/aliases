# distro-independent package manager aliases
OS="$( for f in $(find /etc -type f -maxdepth 1 \( ! -wholename /etc/os-release ! -wholename /etc/lsb-release -wholename /etc/\*release -o -wholename /etc/\*version \) 2> /dev/null); do echo ${f:5:${#f}-13}; done; )"
if [ "$OS" = "arch" ]; then
    alias pm="sudo pacman --color=auto"
    # check if AUR wrapper exists, if yes then use it instead
    if type yay &> /dev/null; then
        alias pm="yay --color=auto"
    fi
    alias pi="pm -S"
    alias pu="pm -Syu"
    alias pr="pm -Rsn"
    alias pc="pm -Sc"
    alias pq="pm -Ss"
    alias pd="pm -Q --info"
elif [ "$OS" = "debian" ]; then
    alias pm="sudo apt-get"
    alias pi="pm install"
    alias pu="pm update && pm upgrade"
    alias pr="pm --purge remove"
    alias pc="pm autoremove && pm autoclean"
    alias pq="apt-cache search"
    alias pd="apt-cache show"
fi

# ls aliases
alias ls="exa --color=auto --icons --group-directories-first"
alias ll="exa -bhl --color=auto --icons --group-directories-first --git"
alias la="exa -a --color=auto --icons --group-directories-first "
alias lt="exa -bh --tree --color=auto --icons --group-directories-first"
alias l.="exa -d .* --color=auto --icons"
alias lal="exa -bhal --color=auto --icons --group-directories-first --git"

# make grep highlight matches
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

# use bat instead of regular cat
alias cat="bat"

# launch neovim when accidentally trying to vim or vi
alias vim="nvim"
alias vi="nvim"

# don't use rm, use freedesktop.org spec trash folders instead
alias trp="trash-put"
alias trl="trash-list"
alias tre="trash-empty"
alias trr="trash-restore"
alias trd="trash-rm"

# devour script to launch gui applications
alias dv="devour"

# one-character aliases for the most used terminal applications
alias l="exa --color=auto --icons --group-directories-first"
alias v="nvim"
alias s="btm"
alias p="btm --basic"
alias g="git"
alias c="bat"

# youtube-dl aliases
alias ytdb="youtube-dl --format bestaudio+bestvideo --no-playlist"
alias ytda="youtube-dl --format bestaudio --extract-audio --no-playlist"
alias ytdp="youtube-dl --format bestaudio+bestvideo --yes-playlist"

# move wget-hsts file to XDG_CACHE_HOME
alias wget="wget --hsts-file=\"$XDG_CACHE_HOME/wget-hsts\""
