# ls aliases
alias ls="exa --color=auto --icons --group-directories-first"
alias ll="exa -bhl --color=auto --icons --group-directories-first --git"
alias la="exa -a --color=auto --icons --group-directories-first "
alias lt="exa -bh --tree --color=auto --icons --group-directories-first"
alias l.="exa -d .* --color=auto --icons --group-directories-first"
alias lal="exa -bhal --color=auto --icons --group-directories-first --git"
alias lsd="exa -hFx --color=auto --icons"
alias lr="exa -R --color=auto --icons --group-directories-first"
alias lra="exa -aR --color=auto --icons --group-directories-first"
alias lrl="exa -alR --color=auto --icons --group-directories-first"

# make grep highlight matches
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

# use bat instead of regular cat
alias cat="bat"

# launch neovim when accidentally trying to vim or vi
alias vim="nvim"
alias vi="nvim"

# don't use rm, use freedesktop.org spec trash folders instead
alias trp="trash-put"
alias trl="trash-list"
alias tre="trash-empty"
alias trr="trash-restore"
alias trd="trash-rm"

# devour script to launch gui applications
alias dv="devour"

# one-character aliases for the most used terminal applications
alias l="exa --color=auto --icons --group-directories-first"
alias v="nvim"
alias s="btm"
alias p="btm --basic"
alias g="git"
alias c="bat"
alias j="jobs"
if command -v ncmpcpp-ueberzug &>/dev/null; then
    alias m="ncmpcpp-ueberzug"
else
    alias m="ncmpcpp"
fi

# youtube-dl aliases
# use yt-dlp instead of youtube-dl if that exists
if command -v yt-dlp &>/dev/null; then
    alias ytdv="yt-dlp --format bestvideo+bestaudio --no-playlist"
    alias ytda="yt-dlp --format bestaudio --extract-audio --no-playlist"
    alias ytdvp="yt-dlp --format bestvideo+bestaudio --yes-playlist"
    alias ytdap="yt-dlp --format bestaudio --yes-playlist"
else
    alias ytdv="youtube-dl --format bestvideo+bestaudio --no-playlist"
    alias ytda="youtube-dl --format bestaudio --extract-audio --no-playlist"
    alias ytdvp="youtube-dl --format bestvideo+bestaudio --yes-playlist"
    alias ytdap="youtube-dl --format bestaudio --yes-playlist"
fi

# move wget-hsts file to XDG_CACHE_HOME
alias wget="wget --hsts-file=\"$XDG_CACHE_HOME/wget-hsts\""

# too lazy to type python, so type py instead
alias py="python"

# windows command prompt has corrupted me
alias cls="clear"

# easy chmod
alias 000="chmod 000"
alias 640="chmod 640"
alias 644="chmod 644"
alias 755="chmod 755"
alias 775="chmod 775"

# date aliases
alias pdate="date '+%a, %b %d %Y %T %Z'"
